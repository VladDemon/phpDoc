<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor configVersion="3.0">

  <title>Документация проекта</title>
  <paths>
    <output>build/docs</output>
    <cache>build/cache</cache>
  </paths>
  <version number="1.0">
    <folder>latest</folder>
    <api>
      <source dsn=".">
        <path>src</path>
      </source>
      <output>api</output>
      <ignore hidden="true" symlinks="true" />
      <extensions>
        <extension>php</extension>
      </extensions>
      <visibility>public</visibility>
      <default-package-name>Local</default-package-name>
      <include-source>true</include-source>
      <markers>
        <marker>TODO</marker>
        <marker>FIXME</marker>
        <marker>DEPRECATED</marker>
      </markers>
    </api>
  </version>

  <settings>
    <setting name="template.color" value="cyan" />
  </settings>
</phpdocumentor>